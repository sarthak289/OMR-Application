<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center">

    <EditText
        android:id="@+id/dialog_number_of_questions_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Number of questions" />
    <RadioGroup
        android:id="@+id/dialog_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_number_of_questions_et">
        <RadioButton
            android:id="@+id/alphabetic_options_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alphabetic options"
            android:checked="true"
            android:layout_gravity="center_horizontal"/>
        <RadioButton
            android:id="@+id/numeric_options_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="numeric options"/>
    </RadioGroup>

    <Button
        android:id="@+id/dialog_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_radio_group"
        android:layout_alignParentRight="true"
        android:text="submit"/>

</RelativeLayout>